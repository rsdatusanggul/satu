# SATU DATU SANGGUL - Environment Configuration
# Copy this file to .env and modify the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Set ke true jika ingin menghubungkan ke database SIMRS
USE_DATABASE=true

# Database host (default: localhost)
DB_HOST=localhost

# Database name (nama database SIMRS)
DB_NAME=simrs

# Database user
DB_USER=root

# Database password
DB_PASS=

# Database port (default: 3306)
DB_PORT=3306

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Password untuk akses Layanan Internal
# Ganti dengan password yang kuat!
INTERNAL_PASSWORD=rahasia123

# =============================================================================
# PWA CONFIGURATION
# =============================================================================
# App name
APP_NAME="SATU DATU SANGGUL"

# App short name
APP_SHORT_NAME="DATU SANGGUL"

# App description
APP_DESCRIPTION="Portal Satu Pintu RSUD Datu Sanggul"

# Theme color (hex)
THEME_COLOR=#0ea5e9

# Background color (hex)
BACKGROUND_COLOR=#f9fafb

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Base URL untuk API
API_BASE_URL=/api

# Rate limit untuk auth (requests per minute)
RATE_LIMIT=60

# =============================================================================
# EXTERNAL LINKS
# =============================================================================
# URL untuk layanan eksternal
URL_PENDAFTARAN=https://jkn.kemenkes.go.id
URL_SIMRS=https://simrs.rsuddatusanggul.go.id
URL_EKINERJA=https://ekinerja.rsuddatusanggul.go.id
URL_ABSENSI=https://absensi.rsuddatusanggul.go.id
URL_ARSIP=https://earsip.rsuddatusanggul.go.id

# =============================================================================
# DEBUG MODE
# =============================================================================
# Set ke true untuk development (menampilkan error detail)
DEBUG=false

# =============================================================================
# CATATAN:
# =============================================================================
# 1. Jangan commit file .env ke repository public
# 2. Ganti INTERNAL_PASSWORD dengan password yang kuat
# 3. Untuk production, set DEBUG=false
# 4. Gunakan HTTPS untuk production PWA
